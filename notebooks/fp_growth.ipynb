# =========================
# FP-GROWTH MODELLING
# =========================

# ========= PARAMETERS (papermill) =========
BASKET_BOOL_PATH = "data/processed/basket_bool.parquet"
RULES_OUTPUT_PATH = "data/processed/rules_fpgrowth_filtered.csv"

MIN_SUPPORT = 0.01
MAX_LEN = 3

METRIC = "lift"
MIN_THRESHOLD = 1.0

FILTER_MIN_SUPPORT = 0.01
FILTER_MIN_CONF = 0.3
FILTER_MIN_LIFT = 1.2
FILTER_MAX_ANTECEDENTS = 2
FILTER_MAX_CONSEQUENTS = 1

TOP_N_RULES = 20

PLOT_TOP_LIFT = True
PLOT_TOP_CONF = True
PLOT_SCATTER = True
PLOT_PLOTLY_SCATTER = True
PLOT_NETWORK = True

# ========= SETUP =========
%load_ext autoreload
%autoreload 2

import os
import sys
import time
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# plotly + network
import plotly.express as px
import networkx as nx

# setup project root
cwd = os.getcwd()
project_root = os.path.abspath("..") if os.path.basename(cwd) == "notebooks" else cwd
src_path = os.path.join(project_root, "src")
if src_path not in sys.path:
    sys.path.append(src_path)

from apriori_library import FPGrowthMiner, DataVisualizer

sns.set(style="whitegrid")
plt.rcParams["figure.figsize"] = (10, 6)

visualizer = DataVisualizer()

# ========= LOAD DATA =========
basket_bool = pd.read_parquet(BASKET_BOOL_PATH)

print("=== basket_bool info ===")
print(f"Rows (invoices): {basket_bool.shape[0]:,}")
print(f"Columns (products): {basket_bool.shape[1]:,}")
print(f"Sparsity (mean): {basket_bool.values.mean():.4f}")

# ========= FP-GROWTH: FREQUENT ITEMSETS =========
fp_miner = FPGrowthMiner(basket_bool=basket_bool)

start = time.time()
frequent_itemsets_fp = fp_miner.mine_frequent_itemsets(
    min_support=MIN_SUPPORT,
    max_len=MAX_LEN,
    use_colnames=True,
)
elapsed = time.time() - start

print("\n=== FP-Growth frequent itemsets ===")
print(f"Runtime: {elapsed:.2f}s")
print(f"Number of itemsets: {len(frequent_itemsets_fp):,}")

if frequent_itemsets_fp.empty:
    raise ValueError("❌ Không tìm được frequent itemsets – hãy giảm MIN_SUPPORT")

# visualize itemsets
visualizer.plot_itemset_length_distribution(frequent_itemsets_fp)
visualizer.plot_top_frequent_itemsets(
    frequent_itemsets_fp, top_n=20, min_len=2
)

# ========= GENERATE RULES =========
rules_fp = fp_miner.generate_rules(
    metric=METRIC,
    min_threshold=MIN_THRESHOLD,
)

rules_fp = fp_miner.add_readable_rule_str()

print("\n=== Rules before filtering ===")
print(f"Total rules: {len(rules_fp):,}")

# ========= FILTER RULES =========
rules_filtered_fp = fp_miner.filter_rules(
    min_support=FILTER_MIN_SUPPORT,
    min_confidence=FILTER_MIN_CONF,
    min_lift=FILTER_MIN_LIFT,
    max_len_antecedents=FILTER_MAX_ANTECEDENTS,
    max_len_consequents=FILTER_MAX_CONSEQUENTS,
)

print("\n=== Rules after filtering ===")
print(f"Remaining rules: {len(rules_filtered_fp):,}")

if rules_filtered_fp.empty:
    raise ValueError("❌ Không còn luật sau khi lọc – hãy nới FILTER_*")

# ========= VISUALIZATION =========
if PLOT_TOP_LIFT:
    visualizer.plot_top_rules_lift(rules_filtered_fp, TOP_N_RULES)

if PLOT_TOP_CONF:
    visualizer.plot_top_rules_confidence(rules_filtered_fp, TOP_N_RULES)

if PLOT_SCATTER:
    visualizer.plot_rules_support_confidence_scatter(rules_filtered_fp)

if PLOT_PLOTLY_SCATTER:
    visualizer.plot_rules_support_confidence_scatter_interactive(rules_filtered_fp)

if PLOT_NETWORK:
    visualizer.plot_rules_network(
        rules_filtered_fp,
        max_rules=min(TOP_N_RULES, 30),
    )

# ========= SAVE =========
fp_miner.save_rules(
    output_path=RULES_OUTPUT_PATH,
    rules_df=rules_filtered_fp,
)

print("\n✅ DONE")
print(f"Saved to: {RULES_OUTPUT_PATH}")
print(f"Final rules: {len(rules_filtered_fp):,}")

